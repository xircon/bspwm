yupf ()
{ date
  sudo pacman-mirrors -f 8
  echo "\n\e[34m#######################"
  echo "# Updating system.....#"
  echo "#######################\e[39m\n"    
  time pacaur -Syyu --color=auto --needed --noconfirm --noedit
  echo "\n\e[34m######################"
  echo "# Cleaning cache.....#"
  echo "######################\e[39m\n"
  sudo paccache -rk3
  sudo paccache -ruk0
  echo "\n\e[34m##############################"
  echo "# Optimizing databases...... #"
  echo "##############################\e[39m\n"
  sudo pacman-optimize
  sudo /usr/bin/localepurge-config
  sudo localepurge
  echo "\e[34m##################"
  echo "# Finished...... #"
  echo "##################\e[39m\n"
}  

yup ()
{ d1=`date`
  echo "Update mirrors?"
  read temp
  case $temp in
       y)
       	   sudo pacman-mirrors -f
  esac
  echo "\n\e[1m\e[31m################################################################\e[39m"
  cat /etc/pacman.d/mirrorlist  | grep Server | head -n1 
  echo "\e[31m################################################################\e[39m\e[0m\n"
  echo "\n\e[1m\e[34m#######################"
  echo "# Updating system.....#"
  echo "#######################\e[39m\e[0m\n"    
  time pacaur -Syyu --color=auto --noconfirm --needed --noedit
  time pacaur -Sya --color=auto --noconfirm --needed --noedit
  echo "Start  $d1"
  echo "Finish `date`"
  sudo updatedb &
}  
alias mucd="cd ~/.config/micro"

mycfg ()
{
    local temp
    #echo "\e[31m"
    echo "\e[31m"
	echo "Configuration Editor" | boxes -d shell
	echo "\e[39m\e[49m"
	#\e[0m"
	echo "1>. Micro - Edit Settings"
	echo "2>. Micro - Edit Key Bindings"
	echo "3>. Micro - Edit Colour Scheme"
	echo "4>. Github page"
	echo "5>. Compton.conf"
	echo "6>. Termite.conf"
	echo "7>. Grub"
	read temp
	case $temp in
	    1)
	        cd ~/.config/micro
	        micro settings.json ;;
	    2)
	        cd ~/.config/micro
	        micro bindings.json ;;	    
	    
	    3)
	        cd ~/.config/micro
	        micro colorschemes/my-simple.micro ;;

	    4)
	    	firefox https://github.com/zyedidia/micro ;;
	    5)
	        mu ~/.config/bspwm/compton/compton.conf ;;

	    6)
			mu ~/.config/termite/config ;;	   	        
	    7) 
	        se /etc/default/grub   	        
	esac
	
}


swapb ()
{
    local temp
    MY_BROWSER="~/scripts/browser.sh"
    echo "\e[31m"
   	echo " Swap Browser" | boxes -d shell
   	echo "\e[39m\e[49m"
   	echo "1>. Vivaldi"
   	echo "2>. Firefox Nightly"
   	echo "3>. Firefox"
   	echo "4>. Google Chrome"
   	read temp

   	case $temp in
   	    1)
   	        cp ~/scripts/vivaldi.sh ~/scripts/browser.sh ;;

   	    2)
   	        cp ~/scripts/firefox-beta.sh ~/scripts/browser.sh ;;

   	    3)
   	        cp ~/scripts/firefox.sh ~/scripts/browser.sh ;;

   	    4)
   	        cp ~/scripts/google-chrom.sh ~/scripts/browser.sh ;;

    esac
}

